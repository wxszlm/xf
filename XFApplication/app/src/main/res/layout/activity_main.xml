<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.MainActivity">

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/login_index_btn"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:src="@mipmap/order_menu_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/app_main_order_btn"
                android:textColor="@color/main_btn_text"
                android:textSize="11sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent">

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:src="@mipmap/user_menu_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/app_main_user_btn"
                android:textColor="@color/main_btn_text"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>